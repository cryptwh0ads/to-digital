@import "./mixins";
@import "./reset";
@import "./fonts";
@import "./colors";

* {
  font-family: "Montserrat", sans-serif;
}

html,
body {
  height: auto;
  width: 100%;
  overflow-x: hidden;
  overflow-y: hidden;
}

body {
  margin: 0;
  font-family: "Arial", "Helvetica Neue", sans-serif !important;
  background: $bgColorDark;
}

main {
  height: calc(100vh - 45px);
  overflow-y: scroll;
  overflow-x: hidden;
}

.history-container,
.search-container {
  margin-bottom: 100px !important;
}

::-webkit-scrollbar {
  width: 0; /* Remove scrollbar space */
  background: transparent; /* Optional: just make scrollbar invisible */
}
/* Optional: show position indicator in red */
::-webkit-scrollbar-thumb {
  background: transparent;
}

a {
  text-decoration: none;
  color: inherit;
}

#to-digital-container {
  height: auto;
  width: 100%;

  @import "components/signin.styl";
  @import "components/signup.styl";
  @import "components/search.styl";
  @import "components/history.styl";

  @import "components/home-board-first-section.styl";
  @import "components/home-board-second-section.styl";
  @import "components/home-board-third-section.styl";
  @import "components/home-board-fourth-section.styl";

  @import "components/profile.styl";

  @import "components/navbar.styl";
  @import "components/shared.styl";
}
