.sign-up-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-up-account-type {
  color: $secondaryColor;
  text-align: center;
}

.sign-up-account-type-options {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.sign-up-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 24px;
}

.sign-up-form-title {
  font-size: 32px;
  font-weight: bold;
  font-family: "Poppins", sans-serif;
  color: $whiteColor;
}

.sign-up-form-inputs {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

/* The switch - the box around the slider */
.switch-type-account {
  position: relative;
  display: inline-block;
  width: 50px;
  height: 24px;
  margin: 16px;
}

/* Hide default HTML checkbox */
.switch-type-account input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: $secondaryColor;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}

.slider:before {
  position: absolute;
  content: "";
  height: 18px;
  width: 18px;
  left: 4px;
  bottom: 4px;
  background-color: $whiteColor;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}

input:checked + .slider {
  background-color: $primaryColor;
}

input:focus + .slider {
  box-shadow: 0 0 1px $primaryColor;
}

input:checked + .slider:before {
  -webkit-transform: translateX(22px);
  -ms-transform: translateX(22px);
  transform: translateX(22px);
}

/* Rounded sliders */
.slider.round {
  border-radius: 34px;
}

.slider.round:before {
  border-radius: 50%;
}

.sign-up-footer {
  margin-top: 62px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  a {
    text-decoration: none;
    color: $secondaryColor;
  }

  a:hover code {
    color: $primaryColor;
  }
}
