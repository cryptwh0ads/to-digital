.sign-in-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-in-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-in-form-title {
  font-size: 32px;
  font-weight: bold;
  margin-top: 62px;
  color: white;
}

.sign-in-form-inputs {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-in-form-input {
  width: 260px;
  height: 40px;
  border-bottom: 1px solid yellow;
  margin-bottom: 16px;
  color: #c6c6c6;
  padding-left: 10px;
  padding-right: 10px;
}

.sign-in-form-input::placeholder {
  color: #c6c6c6;
}

.sign-in-form-button {
  width: 260px;
  height: 52px;
  border-radius: 6px;
  background-color: #ffd700;
  color: #000;
  font-size: 18px;
  font-weight: 800;
  margin-top: 16px;
}

.sign-in-remember-me {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: -142px;
  margin-top: 32px;
  color: #c6c6c6;
}

input[type="checkbox"] {
  width: 24px;
  height: 24px;
  margin-right: 8px;
  border: 1px solid #c6c6c6;
  border-radius: 4px;
  color: #c6c6c6;
}

.sign-in-footer {
  margin-top: 62px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  a {
    text-decoration: none;
    color: #c6c6c6;
  }

  a:hover {
    color: #ffd700;
  }
}
