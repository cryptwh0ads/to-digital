.search-details-container {
  color: $secondaryColor;
  margin-bottom: 60px;
}

.search-details-container-title {
  margin-top: 20px;
  margin-left: 20px;
  margin-bottom: 8px;

  font-size: 18px;
  font-weight: 800;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.search-details-container-subtitle {
  margin-left: 28px;
  font-size: 14px;

  span {
    svg {
      margin-right: 8px;
      color: $primaryColor;
    }
  }
}

.search-details-container-image {
  position: relative;
  border-radius: 12px;

  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 12px;

  img {
    width: 280px;
    object-fit: cover;
    border-radius: 12px;
  }
}

.search-details-container-image-filter {
  position: absolute;
  background-color: $bgColorDark;
  opacity: 0.4;
  width: 100%;
  height: 100%;
  border-radius: 12px;
}

.search-details-container-rate {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin: 10px 0 8px 0;
}

.search-details-container-body-item,
.search-details-container-body-button {
  display: flex;
  padding: 20px;
  margin-bottom: 20px;
  background-color: $bgColor;
  margin: 20px;
  border-radius: 8px;
}

.search-details-container-body-button {
  background-color: $primaryColor;
}

.search-details-container-body-item-title,
.search-details-container-body-button-title {
  width: 100%;
  color: $secondaryColor;

  svg {
    margin-right: 8px;
    color: $primaryColor;
  }
  p {
    margin-top: 16px;
  }
}

.search-details-container-body-button-title {
  color: $bgColorDark;
  font-size: 16px;

  svg {
    color: $bgColor;
    margin-left: 8px;
    font-size: 18px;
  }
}
