.first-section-wrapper {
  display: flex;
  align-items: flex-start;
  margin: 20px;
}

.first-section-content {
  margin-top: 20px;

  h1 {
    color: #fff;
    font-size: 24px;
    font-weight: bold;
  }

  p {
    color: #c6c6c6;
    font-size: 12px;
    margin-top: 12px;
  }
}

.first-section-image {
  position: fixed;
  right: 0;
  margin-right: 20px;

  img {
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid #ffd700;
  }
}
