.search-container {
  margin: 20px;
}

.search-container-inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  width: 90%;
  background-color: $bgColorDark;
  padding: 20px;
  top: 0;
}

.search-container-input {
  background-color: $bgColor;
  color: $secondaryColor;
  height: 42px;
  width: 90%;
  border-radius: 10px 0 0 10px;
  padding: 12px;
}

.search-container-icon {
  color: $primaryColor;
  background-color: $bgColor;
  height: 42px;
  width: 10%;
  padding-top: 8px;
  border-radius: 0 10px 10px 0;

  svg {
    font-size: 24px;
  }
}

.search-container-results-item {
  background-color: $bgColor;
  margin-top: 32px;
}

.search-container-results-item-info {
  padding: 24px;
  color: $secondaryColor;
}

.search-container-results-item-info-title {
  font-size: 18px;
  font-weight: 700;
}

.search-container-results-item-info-description {
  font-size: 14px;
  font-weight: 200;
  margin-top: 8px;

  svg {
    color: $primaryColor;
    margin-right: 8px;
  }
}

.search-container-results-item-actions {
  padding: 16px;
  display: flex;
  justify-content: flex-end;
}

.search-container-results-item-action-button button {
  background-color: $primaryColor;
  color: $bgColor;
  border-radius: 8px;
  padding: 8px;
  font-size: 14px;
  font-weight: 700;
  margin-left: 8px;
}
