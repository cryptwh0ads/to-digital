.second-section {
  margin-top: 40px;
  margin-left: 20px;
  margin-right: 20px;
}

.second-section-title {
  color: $whiteColor;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
}

.second-section-content {
  display: flex;
  flex-direction: row;
  overflow-y: hidden;
  overflow-x: overlay;
}

.second-section-content-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 96px;
  margin-right: 16px;
}

.second-section-content-item-image img {
  border-radius: 20px;
  object-fit: cover;
  border: 2px solid $primaryColor;
}

.second-section-content-item-title {
  color: $secondaryColor;
  font-size: 14px;
  margin-top: 8px;
}
