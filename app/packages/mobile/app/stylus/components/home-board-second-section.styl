.second-section {
  margin-top: 80px;
  margin-left: 20px;
}

.second-section-title {
  color: #fff;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
}

.second-section-content {
  display: flex;
  flex-direction: row;
  overflow-y: hidden;
  overflow-x: overlay;
}

::-webkit-scrollbar {
  width: 0; /* Remove scrollbar space */
  background: transparent; /* Optional: just make scrollbar invisible */
}
/* Optional: show position indicator in red */
::-webkit-scrollbar-thumb {
  background: transparent;
}

.second-section-content-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 96px;
  margin-right: 16px;
}

.second-section-content-item-image img {
  border-radius: 20px;
  object-fit: cover;
  border: 2px solid #ffd700;
}

.second-section-content-item-title {
  color: #c6c6c6;
  font-size: 14px;
  margin-top: 8px;
}
