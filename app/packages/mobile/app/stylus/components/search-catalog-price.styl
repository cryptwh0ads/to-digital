.catalog-price-container {
  margin-bottom: 60px;
}

.catalog-price-container-header {
  margin: 20px 20px 40px 20px;
  font-size: 20px;
  font-weight: 700;

  color: $secondaryColor;

  svg {
    color: $primaryColor;
  }
}

.catalog-price-filter {
  display: flex;
  align-items: center;
  justify-content: center;

  position: fixed;
  bottom: 60px;
  left: 40px;
  background-color: $primaryColor;
  width: 48px;
  height: 48px;
  border-radius: 50%;

  z-index: 99;
}

.catalog-price-filter-ring {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  width: 42px;
  height: 42px;
  border: 4px solid $bgColor;
}

.catalog-price-filter-icon {
  svg {
    color: $bgColor;
    font-size: 18px;
  }
}

.catalog-price-container-body-item {
  color: $secondaryColor;
  margin: 20px;
  padding: 28px;
  background-color: $bgColor;
  border-radius: 12px;
}

.catalog-price-container-body-item-card-title {
  p {
    margin-bottom: 16px;
  }

  span {
    float: right;

    svg {
      color: $primaryColor;
    }
  }
}
