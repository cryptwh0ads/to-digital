.third-section {
  margin-top: 40px;
  margin-bottom: 40px;
}

.third-section-title {
  color: $whiteColor;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
  margin-left: 20px;
}

.third-section-content {
  display: flex;
  flex-direction: row;
  border-radius: 8px;
}

.third-section-content-item {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.third-section-content-item-image img {
  border-radius: 20px;
  object-fit: cover;
  border: 2px solid $whiteColor;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
}

.third-section-content-item-title {
  width: 100%;
  // margin-top: 20px;

  h3 {
    font-size: 24px;
    margin-bottom: 8px;
    font-weight: 700;
    color: $whiteColor;
  }
}

.third-section-content-item-info {
  display: flex;
  flex-direction: row;
  color: $whiteColor;
  font-weight: 600;
}

.third-section-content-item-actions {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 90vw;
  margin-top: 18px;

  button {
    background-color: $whiteColor;
    width: 96px;
    height: 36px;
    border-radius: 4px;
  }
}

.carousel {
  overflow: hidden;
  background-color: $primaryColor;
  border-radius: 8px;
}

.inner {
  white-space: nowrap;
  transition: transform 0.3s;
}

.carousel-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 200px;
  color: $whiteColor;
}

.carousel-wrapper {
  display: flex;
  align-items: center;
}

.carousel-navigation {
  color: $secondaryColor;
  margin: 8px;
}
