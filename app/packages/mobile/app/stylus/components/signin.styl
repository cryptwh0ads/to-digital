.sign-in-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-in-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: -42px;
}

.sign-in-form-title {
  font-size: 32px;
  font-family: "Poppins", sans-serif;
  font-weight: bold;
  margin-top: 62px;
  color: $whiteColor;
}

.sign-in-form-inputs {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sign-in-remember {
  display: flex;
  justify-content: center;
  margin-left: -108px;
  margin-top: 32px;
}

input[type="checkbox"] {
  width: 24px;
  height: 24px;
  margin-right: 8px;
  border: 1px solid $bgColor;
  border-radius: 4px;
  color: $bgColor;
}

.sign-in-footer {
  margin-top: 62px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  a {
    text-decoration: none;
    color: $secondaryColor;
  }

  a:hover {
    color: $primaryColor;
  }
}
