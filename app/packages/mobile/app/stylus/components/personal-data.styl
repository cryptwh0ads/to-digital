.personal-data-container {
  color: #fff;
  margin: 20px;
  font-size: 20px;
  font-weight: 800;
}

.personal-data-header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  margin-bottom: 60px;
  position: relative;

  img {
    border-radius: 50%;
    width: 218px;
    height: 218px;
    z-index: -1;
    object-fit: cover;
  }
}

.personal-data-image-edit {
  background-color: #222831;
  opacity: 0.5;
  z-index: 1;
  width: 182px;
  height: 50px;
  position: absolute;
  border-radius: 0 0 100px 100px;
  bottom: 0;

  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26px;
  color: $secondaryColor;
}

.personal-data-image-edit:hover {
  opacity: 0.7;

  color: $primaryColor;
}

.personal-data-container-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.personal-data-container-content-name {
  margin-bottom: 16px;
  color: $primaryColor;
}

.personal-data-container-content-email {
  margin-bottom: 16px;
  color: $primaryColor;
}

.personal-data-container-content-phone {
  color: $primaryColor;
}

.personal-data-container-content-password {
  margin-top: 26px;
  background-color: $bgColor;
  padding: 20px;
  border-radius: 8px;

  h2 {
    span {
      color: $primaryColor;
      margin: 16px;
    }

    button {
      color: $secondaryColor;
    }
  }
}

.personal-data-container-content-password:hover {
  background-color: $primaryColor;
  padding: 20px;
  border-radius: 8px;

  h2 {
    span {
      color: $bgColor;
      margin: 16px;
    }

    button {
      color: $bgColor;
    }
  }
}
