.profile-container {
  color: $secondaryColor;
}

.profile-logo {
  display: flex;
  justify-content: center;
  margin-top: -60px;
  margin-bottom: -40px;
}

.profile-header {
  display: flex;
  margin: 20px;
  margin-bottom: 40px;
}

.profile-header-card {
  display: flex;
}

.profile-header-card-image {
  img {
    border: 4px solid $primaryColor;
    width: 132px;
    border-radius: 50%;
  }
}

.profile-header-card-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 15px;
  align-items: center;
}

.profile-header-card-info-name {
  font-size: 20px;
  font-weight: 800;
  margin-bottom: 16px;
}

.profile-header-card-info-email {
  h2 {
    display: flex;
    align-items: baseline;

    span {
      margin: 8px;
    }

    svg {
      color: $primaryColor;
    }
  }
}

.profile-header-card-info-phone {
  h2 {
    display: flex;
    align-items: baseline;

    span {
      margin: 8px;
    }

    svg {
      color: $primaryColor;
    }
  }
}

.profile-header-card-info-rate {
  h2 {
    display: flex;
    align-items: baseline;

    p {
      margin: 8px;

      svg {
        color: $primaryColor;
      }
    }
  }
}

.profile-content-card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  border-radius: 8px;
  background-color: $bgColor;
  padding: 32px;

  margin: 32px;

  div.profile-content-card-icon {
    color: $primaryColor;
  }

  div.profile-content-card-access {
    color: $primaryColor;
  }
}
