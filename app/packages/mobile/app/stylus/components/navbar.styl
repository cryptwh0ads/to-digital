.navbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: $bgColor;
}

.navbar-inner {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: $primaryColor;
  font-size: 20px;
  padding-top: 12px;
}

.left {
  display: flex;
  width: 100%;
  align-items: flex-end;
}

.navbar-item-1 {
  margin-bottom: 12px;
  margin-left: 20px;
  margin-right: 30%;
}

.navbar-item-1:hover {
  color: $secondaryColor;
}

.navbar-item-2 {
  margin-bottom: 12px;
}

.navbar-item-2:hover {
  color: $secondaryColor;
}

.center {
  border-radius: 50%;
  border: 5px solid $bgColor;
  position: absolute;
  left: calc(100vw - 55vw);
  top: -27px;
  width: 52px;
  height: 52px;
  font-size: 26px;
  background-color: $primaryColor;
  color: $bgColor;
}

.navbar-item-center {
  display: flex;
  justify-content: center;
  margin: 8px;
}

.right {
  display: flex;
  width: 100%;
  justify-content: end;
}

.navbar-item-3 {
  margin-bottom: 12px;
}

.navbar-item-3:hover {
  color: $secondaryColor;
}

.navbar-item-4 {
  margin-bottom: 12px;
  margin-left: 30%;
  margin-right: 20px;
}

.navbar-item-4:hover {
  color: $secondaryColor;
}
