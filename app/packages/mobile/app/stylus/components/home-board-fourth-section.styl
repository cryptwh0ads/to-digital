.fourth-section {
  margin-top: 40px;
}

.fourth-section-title {
  color: $whiteColor;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
  margin-left: 20px;
}

.fourth-section-content {
  display: flex;
  flex-direction: row;
  border-radius: 8px;
  width: 100vw;
}

.fourth-section-bg-card {
  background-color: rgba(0, 0, 0, 0.4);
  padding-top: 36px;
  padding-bottom: 25px;
  width: 100%;
}

.fourth-section-content-item {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.fourth-section-content-item-title {
  width: 100%;
  margin-left: 40px;
  margin-top: 96px;

  h3 {
    font-size: 24px;
    margin-bottom: 8px;
    font-weight: 700;
    color: $whiteColor;
  }
}

.fourth-section-content-item-info {
  display: flex;
  flex-direction: row;
  color: $whiteColor;
  font-weight: 600;
}
